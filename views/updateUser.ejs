<!-- include header -->
<%- include('include/_header')%>
<!-- /include header -->

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>All Users</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <p class="text-light">Use the below form to update an account</p>
        </div>

        <!-- form Handling -->
        <form  id="update_user" method="POST" action="<%=`/api/users/${user._id}?_method=PUT`%>" >
            <div class="new-user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="text" name="name" placeholder="shalom hooks" id="name" value="<%= user.name %> ">
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                    <input type="email" name="email" placeholder="example@gmail.com" id="Email" value="<%= user.email %> ">
                </div>
                <div class="form-group">
                    <label  class="text-light">Gender</label>
                    <div class="radio inline">
                        <input type="radio" name="gender" value="Male" id="male" checked="<%= user.gender === "Male" %> ">
                        <label for="male" class="radio-label">Male</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" name="gender" value="Female" id="female" checked="<%= user.gender === "Female" %>">
                        <label for="female" class="radio-label">Female</label>
                    </div>
                </div>
                <div class="form-group">
                    <label  class="text-light">Status</label>
                    <div class="radio inline">
                        <input type="radio" name="status" value="Active" id="active" checked="<%= user.status === "Active" %> " >
                        <label for="active" class="radio-label">Active</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" name="status" value="Inactive" id="inactive" checked="<%= user.status === "Inactive" %> " ">
                        <label for="inactive" class="radio-label">Inactive</label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dak update" >Save</button>
                </div>
               
            </div>
        </form>
        <!-- /form Handling -->

   
    </div>
</main>

<!-- include footer -->
<%- include('include/_footer')%>
<!-- /include footer -->